<ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>

<%= form_for @user do |f| %>
  <%= f.label :username %>:
  <%= f.text_field :username %>
  <br>

  <%= f.label :first_name %>:
  <%= f.text_field :first_name %>
  <br>

  <%= f.label :last_name %>:
  <%= f.text_field :last_name %>
  <br>

  <%= f.label :email %>:
  <%= f.text_field :email %>
  <br>

  <%= f.label :password %>:
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>:
  <%= f.password_field :password_confirmation %>

  <%= f.submit 'Submit' %>
<% end %>
<br>
