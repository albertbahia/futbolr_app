<h2>Teams Index</h2>

<div>
  <%= form_tag("/search", method: "get") do %>
    <%= label_tag(:club_id, "Search for Players on FIFA 14 (Enter a Club ID 1 - 83):") %>
    <%= text_field_tag(:club_id) %>
    <%= submit_tag("Search") %>
  <% end %>
</div>


<%= link_to 'Create Team', new_team_path %>

<ul>
  <hr>
  <% @teams.each do |team| %>
    <li><strong>Team: </strong><%= link_to "#{team.name.capitalize}", team_path(team.id) %></li>
    <p><img src="<%= team.flag_url %>"><p>
    <hr>
  <% end %>
</ul>
