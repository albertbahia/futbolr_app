<h2>Teams Index</h2>

<hr>
<div class="bold">
  <% @teams.each do |team| %><br>
    Team: <%= link_to "#{team.name.capitalize}", team_path(team.id) %><br>
    <img src="<%= team.flag_url %>"><br>
    <!-- Challenge Team link below will lead to a challenge screen.  team_path(team.id) is a placeholder. -->
    <%= link_to "Challenge Team", team_path(team.id) %>
    <hr>
  <% end %>
</div>
